{
  "expo": {
    "name": "CrickCoach AI",
    "slug": "cricket-coach-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0066FF"
    },
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to record cricket videos for analysis.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select cricket videos for analysis.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record cricket videos.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "package": "com.saksham_5.cricketcoachmobile",
      "versionCode": 2,
      "minSdkVersion": 21,
      "targetSdkVersion": 34,
      "compileSdkVersion": 34,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "usesCleartextTraffic": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select cricket videos for analysis."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Cricket Coach to access your camera to record cricket videos."
        }
      ],
      "./plugins/network-security.js"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "79e6e45c-32d6-4d27-bb86-43572c61e5e2"
      }
    }
  }
}
